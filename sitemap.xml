---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign sitemap_items = site.pages %}
  {% for collection in site.collections %}
    {% if collection.output %}
      {% assign sitemap_items = sitemap_items | concat: collection.docs %}
    {% endif %}
  {% endfor %}

  {% assign sitemap_items = sitemap_items | where_exp: "item", "item.url" %}
  {% assign sitemap_items = sitemap_items | where_exp: "item", "item.data.sitemap != false" %}

  {% for item in sitemap_items %}
  {% unless item.url == "/sitemap.xml" or item.url == "/404.html" or item.data.sitemap == false or item.data.sitemap == "false" %}
      <url>
        <loc>{{ item.url | absolute_url }}</loc>

        {% assign lastmod = item.last_modified_at | default: item.date | default: item.data.last_modified_at | default: item.data.updated %}
        {% if lastmod %}
          <lastmod>{{ lastmod | date_to_xmlschema }}</lastmod>
        {% endif %}

        {% assign changefreq = item.data.sitemap.changefreq | default: "weekly" %}
        <changefreq>{{ changefreq }}</changefreq>

        {% assign priority = item.data.sitemap.priority | default: 0.5 %}
        <priority>{{ priority }}</priority>
      </url>
    {% endunless %}
  {% endfor %}
</urlset>