---
layout: null
sitemap: false
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  
  {%- comment -%} Collect all items from pages and collections {%- endcomment -%}
  {% assign sitemap_items = site.pages %}
  {% for collection in site.collections %}
    {% if collection.output %}
      {% assign sitemap_items = sitemap_items | concat: collection.docs %}
    {% endif %}
  {% endfor %}

  {%- comment -%} Filter out items without URL or with sitemap: false {%- endcomment -%}
  {% assign sitemap_items = sitemap_items | where_exp: "item", "item.url" %}
  {% assign sitemap_items = sitemap_items | where_exp: "item", "item.sitemap != false" %}

  {% for item in sitemap_items %}
    {%- comment -%} Exclude: sitemap itself, 404, static assets, pagination pages {%- endcomment -%}
    {% assign skip = false %}
    {% if item.url == "/sitemap.xml" or item.url == "/404.html" %}{% assign skip = true %}{% endif %}
    {% if item.url contains "/assets/" %}{% assign skip = true %}{% endif %}
    {% if item.url contains ".js" or item.url contains ".css" or item.url contains ".json" %}{% assign skip = true %}{% endif %}
    {% if item.url contains "/page" and item.url contains "/" %}
      {% assign url_parts = item.url | split: "/" %}
      {% for part in url_parts %}
        {% if part contains "page" and part != "pages" %}
          {% assign page_num = part | remove: "page" %}
          {% if page_num != "" %}{% assign skip = true %}{% endif %}
        {% endif %}
      {% endfor %}
    {% endif %}
    {% if item.sitemap == false or item.data.sitemap == false %}{% assign skip = true %}{% endif %}

    {% unless skip %}
      <url>
        <loc>{{ item.url | absolute_url }}</loc>

        {% assign lastmod = item.last_modified_at | default: item.date | default: site.time %}
        {% if lastmod %}
          <lastmod>{{ lastmod | date_to_xmlschema }}</lastmod>
        {% endif %}

        {%- comment -%} Set priority: homepage=1.0, posts=0.8, others=0.5 {%- endcomment -%}
        {% if item.url == "/" %}
          <changefreq>daily</changefreq>
          <priority>1.0</priority>
        {% elsif item.layout == "single" or item.date %}
          <changefreq>weekly</changefreq>
          <priority>0.8</priority>
        {% else %}
          <changefreq>monthly</changefreq>
          <priority>0.5</priority>
        {% endif %}
      </url>
    {% endunless %}
  {% endfor %}
</urlset>